@import "icomoon"

gris_claro = #fafafa
gris_oscuro = #cecece
gris_mas_oscuro = #444

// Defautls Colors
primary_color = #008CBA   // bondi_blue

default_button_color = #3892d3
default_button_border_color = #157fcc
secondary_color = #e7e7e7 // white_lilac
alert_color = #f04124     // cinnabar
success_color = #43AC6A   // sea_green
warning_color = #f08a24   // carrot
warning_color_hover = #f07924
warning_color_border = #e06802
info_color = #a0d3e8      // cornflower

celeste = #157fcc

figure
	margin 0
	padding 0

form
	padding .3em 0
	input
	select
		color gris_mas_oscuro
		
input[type="file"]
input[type="checkbox"]
input[type="radio"]
input[type="text"]
select
	margin: 0 0 0 0;
	
label
	font-size .9em
select
input[type="text"]
	font-size .8rem
	height 1.6rem
	padding .2rem .5rem


.button
	// background default_button_color
	// border 1px solid default_button_border_color
	// color gris_claro
	// display inline-block
	margin 0
	min-height 1em;
	min-width 3em;
	padding .3em .8em
	font-size 1em
	// text-align center
	border-radius 3px

.buttonWarnning
	background warning_color
	border-color warning_color_border
	&:hover
		background warning_color_hover
		border-color warning_color_border
	&:visited
		background warning_color
		border-color warning_color_border
		

.centerText
	text-align center


.componentContent
	padding 1em
	h2
		margin-top 0

.footer
	height 50px
	background gris_claro
	p
		color gris_mas_oscuro
		margin 0
		padding 0
		padding-top .5em
		font-size 1em


.gridMayusculas
	.x-grid-row
		font-size .85em
	
	.button
		font-size .75rem
		color gris_claro



.header
	background gris_claro
	overflow hidden
	height 80px
	.logo
		float left
		margin 0 1em
		figure
			float left
		h1
			color gris_mas_oscuro
			font-size 1.5rem
			margin 0
			padding 1.5rem 0 0 3rem

#home
	padding 2em
	p
		font-size 1.6em
		line-height 1.6em
		margin 0
		padding 0

.list
	margin-bottom .5em

.menu
	overflow hidden
	list-style none
	margin 0
	padding 0
	font-size 1em
	li
		float left
		border-left 1px solid gris_oscuro
		padding 0 .2em
		a
			color celeste
			text-decoration none
			display inline-block
			padding .2em .8em
			border-bottom 3px solid transparent
			&:hover
				border-bottom 3px solid gris_oscuro


.rightText
	text-align right

// Para cambiar los links del tree y hacerlos igual a los que tienen y no hyperlink
.x-grid-body
	a
		color black
		text-decoration none

			
.wrapperMenu
	float right
	margin-top 1.4em
	margin-right 2em

